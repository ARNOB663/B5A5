# Server Configuration
PORT=80
NODE_ENV=production

# Database Configuration
# MUST be a secure, remote MongoDB instance (e.g. MongoDB Atlas)
# Format: mongodb+srv://<username>:<password>@cluster.mongodb.net/ride-booking?retryWrites=true&w=majority
MONGODB_URI=

# Security
# CRITICAL: Use a strong, random string (e.g. `openssl rand -base64 32`)
JWT_SECRET=
JWT_EXPIRES_IN=1d
BCRYPT_SALT_ROUNDS=12

# Rate Limiting (Stricter for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS Configuration
# Set to * to allow all origins (CAUTION: not recommended for production unless public API)
CORS_ORIGIN=*

# Vercel Deployment
# Set to 1 if deploying to Vercel
# VERCEL=1
