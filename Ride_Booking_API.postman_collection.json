{
  "info": {
    "name": "Ride Booking API",
    "description": "Complete API collection for Ride Booking System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"SecurePass123\",\n  \"phone\": \"+1234567890\",\n  \"role\": \"rider\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Register Driver",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Mike\",\n  \"lastName\": \"Driver\",\n  \"email\": \"mike@example.com\",\n  \"password\": \"SecurePass123\",\n  \"phone\": \"+1234567891\",\n  \"role\": \"driver\",\n  \"vehicleInfo\": {\n    \"make\": \"Toyota\",\n    \"model\": \"Camry\",\n    \"year\": 2022,\n    \"licensePlate\": \"ABC123\",\n    \"color\": \"Blue\"\n  },\n  \"licenseNumber\": \"DL123456789\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register/driver",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register", "driver"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"SecurePass123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Rides",
      "item": [
        {
          "name": "Request Ride",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"pickupLocation\": {\n    \"address\": \"123 Main Street, New York, NY\",\n    \"coordinates\": {\n      \"latitude\": 40.7128,\n      \"longitude\": -74.0060\n    }\n  },\n  \"destinationLocation\": {\n    \"address\": \"456 Broadway, New York, NY\",\n    \"coordinates\": {\n      \"latitude\": 40.7589,\n      \"longitude\": -73.9851\n    }\n  },\n  \"rideType\": \"standard\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/rides/request",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rides", "request"]
            }
          }
        },
        {
          "name": "Get Available Rides (Driver)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/rides/available",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rides", "available"]
            }
          }
        },
        {
          "name": "Accept Ride (Driver)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/rides/:rideId/accept",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rides", ":rideId", "accept"],
              "variable": [
                {
                  "key": "rideId",
                  "value": "RIDE_ID_HERE"
                }
              ]
            }
          }
        },
        {
          "name": "Update Ride Status (Driver)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"picked_up\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/rides/:rideId/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rides", ":rideId", "status"],
              "variable": [
                {
                  "key": "rideId",
                  "value": "RIDE_ID_HERE"
                }
              ]
            }
          }
        },
        {
          "name": "Get Ride History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/rides/history?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rides", "history"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/users?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "users"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Pending Drivers",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/drivers/pending",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "drivers", "pending"]
            }
          }
        },
        {
          "name": "Approve Driver",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"isApproved\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/drivers/:driverId/approve",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "drivers", ":driverId", "approve"],
              "variable": [
                {
                  "key": "driverId",
                  "value": "DRIVER_ID_HERE"
                }
              ]
            }
          }
        },
        {
          "name": "Get System Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/stats",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "stats"]
            }
          }
        }
      ]
    },
    {
      "name": "System",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Welcome",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"],
              "path": [""]
            }
          }
        }
      ]
    }
  ]
}
