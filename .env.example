# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Local MongoDB: mongodb://localhost:27017/ride-booking
# Atlas MongoDB: mongodb+srv://<username>:<password>@cluster.mongodb.net/ride-booking
MONGODB_URI=mongodb://localhost:27017/ride-booking

# Security
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
# Set to * to allow all origins, or comma-separated list to restrict
CORS_ORIGIN=*

# Vercel Deployment (Optional)
# VERCEL=1
